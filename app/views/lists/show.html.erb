<div class="card-title" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random)">
  <%= @list.name %>
</div>

<%= link_to 'Create a bookmark', new_list_bookmark_path(@list),  class: "btn btn-outline-info" %>


<% @bookmarks.each do |bookmark| %>
  <div class="card-movies">
    <%= image_tag bookmark.movie.poster_url%>
    <div class="card-movie-infos">
      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.movie.overview %></p>
      <p><strong><%= bookmark.movie.rating %>/10</strong></p>
      <p><em>"<%= bookmark.comment %>"</em></p>
      <p><%= link_to 'delete bookmark', bookmark_path(bookmark), method: :delete, data: {confirm: 'Are you sure?'}%></p>
    </div>
  </div>
<% end %>


<%= link_to 'Back to homepage', root_path, class:"btn btn-outline-info" %>

